       <RelativeLayout HorizontalOptions="Center">
  <Label Text="{Binding DateTime, StringFormat='{0:T}'}"
           FontSize="40"
            Margin="20"
          >

        <Label.BindingContext>
            <local:ClockViewModel />
        </Label.BindingContext>

    </Label>
            <Label Text="Current Time" FontSize="20" Margin="50" Padding="30" TextColor="{x:Static Color.Blue}"></Label>

          
           </RelativeLayout>
      
</ContentPage>
